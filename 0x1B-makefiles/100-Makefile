CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

main.o: m.h
holberton.o: m.h

.PHONY: all
all: $(SRC) $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -c -o $@

.PHONY: clean
clean:
	$(RM) *~ $(NAME)

.PHONY: oclean
oclean:
	$(RM) $(OBJ)

.PHONY: fclean
fclean: clean oclean

.PHONY: re
re: oclean all
